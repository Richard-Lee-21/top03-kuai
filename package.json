{
  "name": "top03-kuai",
  "version": "1.0.0",
  "description": "动态商品推荐引擎 - 基于实时网络搜索和AI分析",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && echo 'Backend build completed'",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && uvicorn main:app --host 0.0.0.0 --port 8000",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && flake8 app/",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && pytest",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "npm run setup:deps && npm run setup:db",
    "setup:deps": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "setup:db": "cd backend && alembic upgrade head"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9.0"
  },
  "keywords": [
    "ai",
    "recommendation",
    "ecommerce",
    "search",
    "nextjs",
    "fastapi"
  ],
  "author": "Top03-Kuai Team",
  "license": "MIT"
}